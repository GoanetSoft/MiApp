                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-1 mb-lg-0 ms-lg-5">

                        <li class="nav-item"><a class="nav-link active" asp-controller="Productos" asp-action="Index">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link active" asp-controller="Productos" asp-action="Index">Carrito Digitalers</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Sobre Nosotros</a></li>
                        @*<li class="nav-item"><a class="nav-link" asp-controller="Usuarios" asp-action="Create">Registrarse</a></li>*@

                        <li class="nav-item dropdown">
