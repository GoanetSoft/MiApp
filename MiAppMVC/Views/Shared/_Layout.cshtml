                    </ul>
                    @*<!-AGREGAMOS BUSCADOR--*@

                    <form class="d-flex">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
                    </form>
                    @*//-------------*@
                    <form class="d-flex ">
                        <div class="container-fluid">
                            <button class="btn btn-outline-dark" type="submit">
                                <i class="bi-cart-fill me-1"></i>
                                Cart
                                <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                            </button>
                            <button class="btn btn-success" type="submit" asp-controller="Usuarios" asp-action="Create">

                                Registrarse

                            </button>
                            <button class="btn btn-info" type="submit" asp-controller="Usuarios" asp-action="Login">

                                Login

                            </button>
                           
                        </div>
                    </form>
                </div>
            </div>
        </nav>
        <!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Carrito Digit@lers</h1>
                    <p class="lead fw-normal text-white-50 mb-0">Compre sus productos aqui!!</p>
                </div>
            </div>
        </header>
        <!-- Section-->
        
        <section class="py-5">
            <div class="container">
                @RenderBody()
            </div>

           
            
        </section>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
